<h1>Listing posts</h1>
<br>
<h2>
<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
</h2>
<br />

<%= link_to 'New Post', new_post_path %>
